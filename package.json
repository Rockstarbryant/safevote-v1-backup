{
  "name": "safevote-v2",
  "version": "2.0.0",
  "description": "Multichain decentralized voting platform",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:v1": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:v2": "hardhat run scripts/deployV2Multichain.js",
    "upgrade:v2": "hardhat run scripts/upgradeToV2.js",
    "start:keyservice": "cd services && node keyService.js",
    "start:frontend": "cd frontend && python3 -m http.server 8000",
    "dev": "concurrently \"npm run start:keyservice\" \"npm run start:frontend\""
  },
  "keywords": [
    "voting",
    "blockchain",
    "ethereum",
    "governance",
    "multichain"
  ],
  "author": "SafeVote Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "@openzeppelin/contracts-upgradeable": "^5.0.1",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "chart.js": "^4.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.11",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react-chartjs-2": "^5.3.1",
    "recharts": "^3.6.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "ethers": "^6.16.0",
    "hardhat": "^2.19.0",
    "hardhat-abi-exporter": "^2.11.0",
    "hardhat-change-network": "^0.0.7",
    "hardhat-deploy": "^1.0.4"
  }
}
